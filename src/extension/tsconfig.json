{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": [
			"ES2020"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./out",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
