{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": [
			"ES2022",
			"DOM"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./",
		"jsx": "react-jsx",
		"noEmit": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"crdt-engine"
	]
}
